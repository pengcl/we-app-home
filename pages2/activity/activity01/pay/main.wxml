<cu-custom bgColor="bg-white" isCustom="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">十二大无忧置业权益</view>
</cu-custom>
<view style="display: flex;flex-flow: column nowrap" wx:if="{{a}}">
  <view>
    <image class="" src="{{pic1}}" mode="widthFix" style="width: 100%;">
    </image>
    <image class="" src="{{pic2}}" mode="widthFix" style="width: 100%;">
    </image>
    <image class="" src="{{pic3}}" style="width: 100%;height:1400rpx">
    </image>
    <image class="" src="{{pic4}}" mode="widthFix" style="width: 100%;">
    </image>
    <image class="" src="{{pic5}}" mode="widthFix" style="width: 100%;margin-bottom: 100rpx;">
    </image>
  </view>
  <view style='display: flex;flex-direction: column;margin: -3630rpx 0 0 120rpx;'>
    <image src='{{kywimg}}' style='width: 510rpx;height: 300rpx;margin-bottom: 20rpx;' data-code='KYW' bindtap="proj_tap"></image>
    <image src='{{yyimg}}' style='width: 510rpx;height: 300rpx;margin-bottom: 20rpx;' data-code='GF' bindtap="proj_tap"></image>
    <image src=' {{gfimg}} ' style='width: 510rpx;height: 300rpx;margin-bottom: 20rpx;' data-code='YY' bindtap="proj_tap"></image>
    <image src=' {{zqimg}} ' style='width: 510rpx;height: 300rpx;' data-code='ZQ' bindtap="proj_tap"></image>
  </view>
  <view style='width:100%;height:153rpx'></view>
  <view bindtap="detail_tap">
    <image src='{{detailimg}}' style='width: 58rpx;height: 180rpx;position: fixed;bottom: 500rpx;margin-left: 696rpx;'></image>
  </view>
  <view>
    <view style='width:750rpx;height:150rpx;background:rgba(255,255,255,1);position:fixed;bottom:0;display:flex;'>
      <view style='font-size:30rpx;font-family:SourceHanSansSC-Normal,SourceHanSansSC;font-weight:400;line-height:44rpx;margin: 53rpx 0 53rpx 53rpx'>
        <text style='color:rgba(127,64,37,1);'>- 已有</text>
        <text style='color:#C6A160'>{{productdetaildata.joinNum*9+1024}}</text>
        <text style='color:rgba(127,64,37,1);'>人购买 -</text>
      </view>
      <view style='width:316rpx;height:88rpx;background:linear-gradient(to right,rgba(199,163,102,1) 0%,rgba(235,224,160,1) 50%,rgba(198,162,101,1) 100%);box-shadow:0rpx 5rpx 3rpx 2rpx rgba(224,205,161,0.59);border-radius:5rpx;text-align:center;font-size:40rpx;font-weight:500;color:rgba(127,64,37,1);line-height:88rpx;letter-spacing:1rpx;margin: 18px 0 0 399rpx;position: absolute;'
        bindtap="pay_tap">立即抢购</view>
    </view>
  </view>
</view>